            mods = <(MOD_LSFT)>;
        };
        dvpplus: dvp_plus {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp PLUS>, <&kp N4>;
            mods = <(MOD_LSFT)>;
        };
        dvprbkt: dvp_rbkt {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp RBKT>, <&kp N6>;
            mods = <(MOD_LSFT)>;
        };
        dvpexcl: dvp_excl {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp EXCL>, <&kp N8>;
            mods = <(MOD_LSFT)>;
        };
        dvphash: dvp_hash {
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp HASH>, <&kp GRAVE>;
            mods = <(MOD_LSFT)>;
        };
    };
};